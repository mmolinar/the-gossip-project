<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= gravatar_for(@usr) %>
    </div>
    <div class="col-md-3">
      <h1 class="display-4">
        <%= @usr.first_name %>
        <%= @usr.last_name %>
      </h1> 
      <p class="lead">
        <%= @usr.age %> years
        <%= @usr.email %>
      </p>
    </div>
  </div>
</div>